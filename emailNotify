node {
       
        try {
        stage('Init') {           
            echo "Init Stage"
        } 
        stage('Gate') {
        echo "Gate Stage"
        }
        currentBuild.result = 'SUCCESS'           
        } catch (Exception err) {
            echo 'This will run only if failed'
            currentBuild.result = 'FAILURE'
  
        }  
        finally {                 
                 
                mail to: 'kdwebs91@gmail.com',
                subject: " ${currentBuild.result} ${currentBuild.currentResult}|| Pipeline Details: ${currentBuild.fullDisplayName}",
                body: """<p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""" + "\n" + "and current result is ${currentBuild.result}"             
               
          }                    
  } 
