node {
      
        try {
        stage('Init') {           
            echo "Init Stage"
        } 
        stage('Gate') {
        echo "Gate Stage"
        }
        currentBuild.result = 'SUCCESS'           
        } catch (Exception err) {
            echo 'This will run only if failed'
            currentBuild.result = 'FAILURE'
  
        }  
        finally {                 
                mimeType: 'text/html'
                mail to: 'kdwebs91@gmail.com',
                subject: " ${currentBuild.result} ${currentBuild.currentResult}|| Pipeline Details: ${currentBuild.fullDisplayName}",
                body: "<p> You can check the logs for this build in &QUOT; <a href='${env.BUILD_URL}'>Click Here</a>&QUOT;</p> " + "\n" + "and current result is ${currentBuild.result}"             
               
          }                    
  } 
