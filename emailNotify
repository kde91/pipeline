node {
        try {
        stage('Init') {
            sh "exit 1"
            echo "Init Stage"
        }       
        currentBuild.result = 'SUCCESS'           
        } catch (Exception err) {
            echo 'This will run only if failed'
            currentBuild.result = 'FAILURE'
        }  
        def infotext = ""[Click here](BUILD_URL) ""
        finally {            
                mail to: 'karnajit.de@capgemini.com',
                subject: " ${currentBuild.result} || Pipeline Details: ${currentBuild.fullDisplayName}",
                body: "You can check the logs for this build in ${infotext}" + "\n" + "and current result is ${currentBuild.result}"
          }                     
  }    
