node {
       
        try {
        stage('Init') {           
            echo "Init Stage"
        } 
        stage('Gate') {
        echo "Gate Stage"
        }
        currentBuild.result = 'SUCCESS'           
        } catch (Exception err) {
            echo 'This will run only if failed'
            currentBuild.result = 'FAILURE'
  
        }  
        finally {                 
                 
                mail to: 'kdwebs91@gmail.com',
                subject: " ${currentBuild.result} ${currentBuild.currentResult}|| Pipeline Details: ${currentBuild.fullDisplayName}",
                body: "This is a <a href = ${env.BUILD_URL}>click Here</a> " + "\n" + "and current result is ${currentBuild.result}"             
               
          }                    
  } 
